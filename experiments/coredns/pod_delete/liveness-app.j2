apiVersion: v1
kind: Pod
metadata:
  labels:
    run: liveness-app
{% if chaos_uid is defined and chaos_uid != '' %}
    chaosUID: {{ chaos_uid }}
{% endif %}    
  name: liveness-app
  namespace: {{ c_ns }}
spec:
  containers:
  - image: openebs/tests-custom-client:latest
    name: custom-client
    env:
      - name: SERVICE
        value: 'nginx'
      - name: INIT_WAIT_DELAY
        value: '2'
      - name: INIT_RETRY_COUNT
        value: '1'
      - name: LIVENESS_PERIOD_SECONDS
        value: '2'
      - name: LIVENESS_TIMEOUT_SECONDS
        value: '3'
      - name: LIVENESS_RETRY_COUNT
        value: '10'
      - name: PORT
        value: '80'
      - name: NAMESPACE
        value: {{ c_ns }}
  dnsPolicy: ClusterFirst
  restartPolicy: Always